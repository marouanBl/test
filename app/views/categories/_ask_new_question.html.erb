
<% if user_signed_in? %>

	<div id="quickquestion">

	  <%= form_for(Question.new(params[:question])) do |f| %>

	    <%= f.text_field :subject, :placeholder => "Le titre de votre question" %>


	      <%= f.text_area :question, :class => "redactor", :value => "Etalez votre sujet d'interrogation ..." %>

	      <%= f.hidden_field :category_id, :value => @category.id %>

	      <%= f.hidden_field :user_id, :value => current_user.id %>

	    <div class="actions">
	      <input name="commit" type="submit" value="Poser la Question" />
	    </div>
	  <% end %>	

	</div>


<% end %>