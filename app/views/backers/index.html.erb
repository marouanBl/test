<h1>Listing backers</h1>

<table>
  <tr>
    <th>Project</th>
    <th>User</th>
    <th>Value</th>
    <th>Confirmed at</th>
    <th>Finished</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @backers.each do |backer| %>
  <tr>
    <td><%= backer.project_id %></td>
    <td><%= backer.user_id %></td>
    <td><%= backer.value %></td>
    <td><%= backer.confirmed_at %></td>
    <td><%= backer.finished %></td>
    <td><%= link_to 'Show', backer %></td>
    <td><%= link_to 'Edit', edit_backer_path(backer) %></td>
    <td><%= link_to 'Destroy', backer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

